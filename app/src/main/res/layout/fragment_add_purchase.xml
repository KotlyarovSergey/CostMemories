<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.ksv.costmemories.ui.add_purchase.model.AddPurchaseViewModel" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2196F3"
        tools:context=".ui.add_purchase.view.AddPurchaseFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Новая покупка"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="28sp" />

            <EditText
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginVertical="16dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1.0"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="@={viewModel.date}"
                android:hint="Дата"
                android:inputType="date" />

            <AutoCompleteTextView
                android:id="@+id/product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"

                android:hint="Продукт"
                android:inputType="textCapSentences"
                android:text="@={viewModel.product}" />

            <AutoCompleteTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:hint="Название"
                android:inputType="textCapSentences"
                android:text="@={viewModel.title}" />

            <AutoCompleteTextView
                android:id="@+id/shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:hint="Магазин"
                android:inputType="textCapSentences"
                android:text="@={viewModel.shop}" />

            <EditText
                android:id="@+id/cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:text="@={viewModel.cost}"
                android:hint="Цена"
                android:inputType="number" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:hint="Коментарий"
                android:inputType="text"
                android:text="@={viewModel.comment}" />

            <Button
                android:id="@+id/add_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#165281"
                android:onClick="@{()-> viewModel.onAddClick()}"
                android:paddingVertical="8dp"
                android:text="добавить"
                android:textAllCaps="true"
                android:textSize="22sp"
                app:cornerRadius="8dp" />

        </LinearLayout>
    </ScrollView>
</layout>
